<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:GxControls="clr-namespace:Gestionix.POS.GUI;assembly=GxWPFControlsLib">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
            
    <!--BUTTONS-->
    <Style TargetType="{x:Type GxControls:StatesButton}">
        <Setter Property="Height" Value="50" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Height" Value="50" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    <!--END BUTTONS-->
    
   <!--TEXTBOXES-->
    <Style TargetType="{x:Type GxControls:HintTextBox}">
        <Setter Property="Height" Value="50" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style TargetType="{x:Type GxControls:HintPasswordBox}">
        <Setter Property="Height" Value="50" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="5" />
    </Style>
    <!--END TEXTBOXES-->
</ResourceDictionary>