<Application x:Class="Gestionix.POS.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
             xmlns:POSConverters="clr-namespace:Gestionix.POS.GUI.Converters.POS"             
             StartupUri="POS.xaml" Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Dictionaries/Styles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Dictionaries/Dictionary-ES-MX.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/ViewModels/LogIn/Views/RLogin.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <POSConverters:ResizableWindowBooleanConverter x:Key="ResizableWindowBooleanConverter"/>
            <POSConverters:MaximizedWindowBooleanConverter x:Key="MaximizedWindowBooleanConverter"/>

            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontSize" Value="13" />
            </Style>
        </ResourceDictionary>        
    </Application.Resources>
</Application>
